<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/home_layout"
    android:background="#dad6e6">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/engine"
            android:id="@+id/engine_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/engine_img"/>

        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/battery"
            android:id="@+id/bat_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/battery_img"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/oil"
            android:id="@+id/oil_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/oil_img"/>
    </LinearLayout>

</LinearLayout>